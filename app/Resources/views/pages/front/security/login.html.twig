{% extends "base.html.twig" %}

{% block title %}
    Connexion - Behive
{% endblock %}

{% block body %}
    {% include "pages/front/partial/menu.html.twig" %}

    <div id="log" class="push">
        <img src="{{ asset('img/logo.png') }}" alt="logo" width="110px">
    </div>

    <div id="login">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% for label, flashes in app.session.flashbag.all %}
            {% for flash in flashes %}
                <div class="alert alert-{{ label }}">
                    {{ flash }}
                </div>
            {% endfor %}
        {% endfor %}

        <form action="{{ path('front_login') }}" method="post">
            <label for="logins">Login</label>
            <input id="logins" name="_username" type="text" value="{{ last_username }}">

            <label for="password">Mot de passe</label>
            <input id="password" name="_password" type="password">

            <div>
                <input type="submit" value="Valider" class="boutonSubmit">
            </div>
        </form>

        <div style="text-align:center;margin-top:10px;">
            <p><a href="{{ path('register') }}">S'inscrire</a></p>
            <p><a href="#">Mot de passe de perdu ?</a></p>
        </div>
    </div>
{% endblock %}
